<%= form_with(model: offer, local: true) do |form| %>
  <% if offer.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(offer.errors.count, "error") %> prohibited this offer from being saved:</h2>

      <ul>
        <% offer.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group col-sm-6">
    <%= form.label :advertiser_name %>
    <%= form.text_field :advertiser_name, class: "form-control" %>
  </div>

  <div class="form-group col-sm-6">
    <%= form.label :url, 'URL' %>
    <%= form.url_field :url, class: "form-control", placeholder: "http://google.com" %>
  </div>

  <div class="form-group col-sm-6">
    <%= form.label :description %>
    <%= form.text_area :description, class: "form-control" %>
  </div>

  <div class="form-group col-sm-6">
    <%= form.label :starts_at %>
    <%= form.date_field :starts_at, class: "form-control" %>
  </div>

  <div class="form-group col-sm-6">
    <%= form.label :ends_at %>
    <%= form.date_field :ends_at, class: "form-control" %>
  </div>

  <div class="form-group">
    <div class="custom-control custom-switch">
      <%= form.check_box :premium, class: "custom-control-input", checked: true %>
      <%= form.label :premium, "Premium?", class: "custom-control-label" %>
    </div>
  </div>

  <div class="actions">
    <%= form.submit class: "btn btn-primary" %>
  </div>
<% end %>
